  "paths": {
    "/api/total-bills": {
      "get": {
        "summary": "Total tagihan pengguna",
        "parameters": [
          {
            "name": "email",
            "in": "header",
            "description": "Email pengguna",
            "required": true,
            "schema": {
              "type": "string",
              "example": "user@gmail.com"
            }
          },
          {
            "name": "Password",
            "in": "header",
            "description": "Password pengguna",
            "required": true,
            "schema": {
              "type": "string",
              "example": "password123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses cek tagihan",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BillResponseSuccess"
                },
                "example": {
                  "success": true,
                  "data": {
                    "total": 30000000
                  },
                  "message": ""
                }
              }
            }
          },
          "401": {
            "description": "email dan Password yang dikirim tidak benar",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponseError"
                },
                "example": {
                  "success": false,
                  "data": {},
                  "message": "Email atau password salah"
                }
              }
            }
          }
        }
      }
    },
    "/api/bills": {
      "get": {
        "summary": "Riwayat tagihan pengguna",
        "parameters": [
          {
            "name": "email",
            "in": "header",
            "description": "Email pengguna",
            "required": true,
