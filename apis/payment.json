    "/api/bills/:id/pay": {
      "post": {
        "summary": "Endpoints untuk membuat pembayaran tagihan",
        "parameters": [
          {
            "name": "email",
            "in": "header",
            "description": "Email pengguna",
            "required": true,
            "schema": {
              "type": "string",
              "example": "user@gmail.com"
            }
          },
          {
            "name": "Password",
            "in": "header",
            "description": "Password pengguna",
            "required": true,
            "schema": {
              "type": "string",
              "example": "password123"
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "ID tagihan",
            "required": true,
            "schema": {
              "type": "string",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestBodyPay"
              },
              "example": {
                "paymentMethod": "bri"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses membuat payment",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentResponseCreated"
                },
                "example": {
                  "success": true,
                  "data": {
                    "invoice": "INV0844050",
                    "status": "pending",
                    "_links": {
                      "instruction": "/api/payments/INV0844050"
                    }
                  },
                  "message": ""
                }
              }
            }
          }
        }
      }
    },
