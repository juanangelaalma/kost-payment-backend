          {
            "name": "Password",
            "in": "header",
            "description": "Password pengguna",
            "required": true,
            "schema": {
              "type": "string",
              "example": "password123"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Batas jumlah riwayat yang ingin ditampilkan",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sukses mendapatkan riwayat tagihan pengguna",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BillsHistoryResponseSuccess"
                },
                "example": {
                  "success": true,
                  "data": [
                    {
                      "id": 1,
                      "month": "Juli",
                      "year": "2020",
                      "amount": 30000000,
                      "status": "pending"
                    }
                  ],
                  "message": ""
                }
              }
            }
          },
          "401": {
            "description": "email dan Password yang dikirim tidak benar",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponseError"
                },
                "example": {
                  "success": false,
                  "data": {},
                  "message": "Email atau password salah"
                }
              }
            }
          }
        }
      }
